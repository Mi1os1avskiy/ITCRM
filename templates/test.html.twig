{% extends 'support/support.base.html.twig' %}

{% set title = 'TEST' %}

{% block content %}

	<support-settings inline-template>

		<div class="p-8 space-y-6 divide-y-2">

			<div>
				{% set filt = ['one', 'two', 'three', 'four', 'five'] %}
				{% for i in filt|filter(i => i not in ['two', 'four']) %}
					<div class="inline-block mr-4 p-2 ring rounded-md">{{ i }}</div>
				{% endfor %}
			</div>

			<div class="flex py-8 space-x-4">
				{% for i in user_statuses|keys|filter(key => key not in ['Active', 'Closed']) %}
					<div class="w-fit px-2.5 py-0.5 rounded-full bg-{{ user_statuses[i] }}-100 text-xs text-{{ user_statuses[i] }}-800 font-medium whitespace-nowrap">{{ i }}</div>
				{% endfor %}
			</div>

			<div>
				{# config/packages/twig.yaml #}
				{% for i in test_glob %}
					<p>{{ i.id }} - {{ i.text }}</p>
				{% endfor %}
			</div>

			<div class="popover__wrapper relative">
				<h2 class="w-fit mt-4 mx-auto py-2 px-4 border rounded-md hover:bg-gray-50">Hover me</h2>
				<div class="popover__content w-fit bottom-16 py-2 px-3 bg-gray-800 text-gray-100 text-xs font-medium rounded-lg whitespace-nowrap">
					<p>Here is some text for tooltip and there is may be very long string.</p>
				</div>
			</div>

			<div>
				<ul class="grid grid-cols-3 gap-x-5 m-10 max-w-md mx-auto">

					{% set values = {'yes': '👍', 'no': '👎', 'maybe': '🤔'} %}

					{% for key, val in values %}
						<li class="relative">
							<input class="sr-only peer" type="radio" value="yes" name="answer" id="answer_{{ key }}">
							<label class="flex p-5 bg-white border border-gray-300 rounded-lg cursor-pointer focus:outline-none hover:bg-gray-50 peer-checked:ring-green-500 peer-checked:ring-2 peer-checked:border-transparent" for="answer_{{ key }}">{{ key }}</label>
							<div class="absolute hidden w-5 h-5 peer-checked:block top-5 right-3">{{ val }}</div>
						</li>
					{% endfor %}
				</ul>
			</div>

			<div class="py-8 space-y-4">
				<div class="w-fit ring p-4">
					<div class="w-fit px-2.5 py-0.5 rounded-full bg-green-100 text-xs text-green-800 font-medium whitespace-nowrap">Waiting for Manager</div>
				</div>
			</div>

			<div>
				{% set x = path(app.request.attributes.get('_route')) %}
				{{ x }}
			</div>
		</div>

	</support-settings>

	<div class="hidden text-orange-400 text-orange-800 text-blue-400 text-green-500 bg-blue-400 bg-orange-200 bg-gray-400 bg-purple-400 focus:ring-red-500"></div>

{% endblock %}
