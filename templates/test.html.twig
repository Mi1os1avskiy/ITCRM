				{% endfor %}
			</div>

			<div>
				{% for i in test_glob %}
					<p>{{ i.id }} - {{ i.text }}</p>
				{% endfor %}
			</div>

			<div>
				<div class="flex py-4 space-x-4">
					<a href="{{ path('test', { sort:1 }) }}" class="inline-block py-2 px-4 border rounded-md hover:bg-gray-50">Sort less</a>
					<a href="{{ path('test', { sort:2 }) }}" class="inline-block py-2 px-4 border rounded-md hover:bg-gray-50">Sort more</a>
					<a href="{{ path('test') }}" class="inline-block py-2 px-4 border rounded-md hover:bg-gray-50">Clear</a>
				</div>

				{% set arr = [] %}

				{% set arr = arr|merge([getGet()]) %}
				{% for i in arr %}
					<div><b>{{ i }}</b></div>
				{% endfor %}
			</div>

