{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}support-new-ticket-service{% endblock %}

{% block modal_content %}

	{% set services = [
		{'title': 'Без услуги', 'id': '', 'ip': '', 'status': ''},
		{'title': 'Premium - Linux SSD', 'id': '#23427', 'ip': '123.255.255.017', 'status': 'Active'},
		{'title': 'Lite - Linux SSD', 'id': '#23427', 'ip': '123.255.255.017', 'status': 'Cancelled'},
		{'title': 'Exclusive - Linux SSD', 'id': '#23427', 'ip': '123.255.255.017', 'status': 'Active'},
		{'title': 'Elite - Linux SSD', 'id': '#23427', 'ip': '123.255.255.017', 'status': 'Terminated'},
		{'title': 'Start - Linux SSD', 'id': '#23427', 'ip': '123.255.255.017', 'status': 'Active'}
	] %}

	<div class="relative w-[800px] transform overflow-hidden rounded-lg bg-white my-auto shadow-xl transition-all">

		<div class="flex items-center justify-between py-5 px-6 border-b bg-gray-50">
			<p class="text-lg font-medium text-left">Выбрать привязанную услугу</p>
			<div class="flex items-center space-x-4">
				<div class="relative rounded-md shadow-sm">
					<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
						<svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
							<path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
						</svg>
					</div>
					<input type="text" class="block w-full rounded-md border-gray-300 pl-10 focus:border-indigo-500 focus:ring-indigo-500 text-sm placeholder:text-gray-400" placeholder="Поиск по ID или IP">
				</div>
				<div class="flex h-7 items-center">
					<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
						<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
						</svg>
					</button>
				</div>
			</div>
		</div>

		<div class="h-80 overflow-y-scroll">
			<table class="min-w-full">
				<tbody class="py-5 text-sm">
				{% for service in services %}
					<tr class="flex p-4 space-x-4 border-y border-b-gray-200 border-t-transparent group hover:bg-indigo-50 hover:border-indigo-200">
						<td class="flex-none">
							<input type="radio" name="service" id="{{ service.title }}" class="border-gray-300">
						</td>
						<td class="flex-none font-medium whitespace-nowrap">
							<label for="{{ service.title }}" class="group-hover:text-indigo-900">{{ service.title }}</label>
						</td>
						<td class="flex-grow text-gray-500 text-left">{{ service.id }}</td>
						<td class="flex-none text-gray-500 text-left">{{ service.ip }}</td>
						<td class="flex-none w-24 text-right">
							{% if service.status == 'Active' %}
								<span class="py-0.5 px-2.5 rounded-full bg-green-100 text-xs text-green-800">{{ service.status }}</span>
							{% elseif service.status == 'Cancelled' %}
								<span class="py-0.5 px-2.5 rounded-full bg-gray-100 text-xs text-gray-800">{{ service.status }}</span>
							{% elseif service.status == 'Terminated' %}
								<span class="py-0.5 px-2.5 rounded-full bg-red-100 text-xs text-red-800">{{ service.status }}</span>
							{% endif %}
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>

		<div class="sm:flex px-6 py-5 bg-gray-50 sm:space-x-3 sm:text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full rounded-md border border-gray-300 px-4 py-[9px] text-gray-700 shadow-sm bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Отменить</button>
			<button @click="close(true)" type="button" class="max-sm:mt-3 w-full rounded-md border border-transparent bg-indigo-600 px-4 py-[9px] text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Выбрать</button>
		</div>

	</div>

{% endblock %}
