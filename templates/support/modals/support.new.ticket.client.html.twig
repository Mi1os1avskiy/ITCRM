{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}support-new-ticket-client{% endblock %}

{% block modal_content %}

	{% set users = [
		{'email': 'auisque@mail.com', 'name': 'Dianne Russell', 'id': 239238},
		{'email': 'maurisnulla@mail.com', 'name': 'Jacob Jones', 'id': 23423},
		{'email': 'proin_aliquet@mail.com', 'name': 'Floyd Miles', 'id': 56748},
		{'email': 'nibh_consequat@mail.com', 'name': '', 'id': 49873},
		{'email': 'vulputate@mail.com', 'name': 'Ronald Richards', 'id': 876458},
		{'email': 'mail@mail.com', 'name': 'Richard Dawkins', 'id': 71567},
		{'email': 'miloslavskiy@tut.by', 'name': 'Lex Stark', 'id': 14567},
	] %}

	<div class="relative w-[800px] h-[494px] transform overflow-hidden rounded-lg bg-white my-auto shadow-xl transition-all">

		<div class="h-[78px] flex items-center justify-between py-5 px-6 border-b bg-gray-50">
			<h2 class="text-lg font-medium text-gray-900">Выбрать клиента</h2>
			<div class="flex items-center space-x-4">
				<div class="w-[220px] relative rounded-md shadow-sm">
					<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
						<svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
							<path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
						</svg>
					</div>
					<input type="text" class="block w-full rounded-md border-gray-300 pl-10 focus:border-indigo-500 focus:ring-indigo-500 text-sm placeholder:text-gray-400" placeholder="Поиск по Email или ID">
				</div>
				<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
					<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>
		</div>

		<ul class="h-[338px] overflow-y-scroll">
			{% for user in users %}
				<li class="test flex items-center py-4 px-6 space-x-4 border-y border-b-gray-200 border-t-transparent text-sm peer-checked/test:bg-red-500 hover:bg-indigo-50 hover:border-indigo-200">
					<input type="radio" name="user" id="{{ user.email }}" class="peer/test border-gray-300">
					<label for="{{ user.email }}" class="w-[274px] text-gray-900 text-left font-medium">{{ user.email }}</label>
					<div class="w-[274px] text-gray-500 text-left peer-checked:bg-red-500">{{ user.name }}</div>
					<div class="w-[140px] text-gray-500 text-left">#{{ user.id }}</div>
				</li>
			{% endfor %}
		</ul>

		<div class="h-[78px] flex px-6 py-5 bg-gray-50 space-x-3 text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full rounded-md border border-gray-300 px-[17px] py-[9px] text-gray-700 shadow-sm bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Отменить</button>
			<button @click="close(true)" type="button" class="w-full rounded-md border border-transparent bg-indigo-600 px-[17px] py-[9px] text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Выбрать</button>
		</div>

	</div>

{% endblock %}
