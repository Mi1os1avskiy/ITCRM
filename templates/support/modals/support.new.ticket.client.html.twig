			</div>
		</div>

		<ul class="h-[338px] overflow-y-scroll">
			{% for user in users %}
				<li class="test flex items-center py-4 px-6 space-x-4 border-y border-b-gray-200 border-t-transparent text-sm peer-checked/test:bg-red-500 hover:bg-indigo-50 hover:border-indigo-200">
					<input type="radio" name="user" id="{{ user.email }}" class="peer/test border-gray-300">
					<label for="{{ user.email }}" class="w-[274px] text-gray-900 text-left font-medium">{{ user.email }}</label>
					<div class="w-[274px] text-gray-500 text-left peer-checked:bg-red-500">{{ user.name }}</div>
					<div class="w-[140px] text-gray-500 text-left">#{{ user.id }}</div>
				</li>
			{% endfor %}
		</ul>

		<div class="flex px-6 py-5 bg-gray-50 space-x-3 text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full py-2 px-4 rounded-md border border-gray-300 text-gray-700 shadow-sm bg-white hover:bg-gray-50">Отменить</button>
			<button @click="close(true)" type="button" class="w-full py-2 px-4 rounded-md border border-transparent bg-indigo-600 text-white shadow-sm hover:bg-indigo-700">Выбрать</button>
		</div>

	</div>

{% endblock %}
