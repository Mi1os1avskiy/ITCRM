<!DOCTYPE html>
<html class="h-full bg-white" lang="en">
<head>
	<meta charset="UTF-8">
	<title>{% block title %}{% endblock %}</title>
	<link rel="icon" href="{{ asset('src/favicon.ico') }}">
	{% block stylesheets %}
		<link href="{{ asset('dist/styles.css') }}" rel="stylesheet"/>
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
	{% endblock %}
</head>

<body class="h-full">

{% block body %}

	<main id="app">

		{% set user_statuses = {'Active': 'green', 'Unconfirmed': 'yellow', 'Inactive': 'gray', 'Closed': 'gray'} %}
		{% set transaction_statuses = {'Частично засчитана': 'red', 'Не засчитана': 'red', 'Мошенническая': 'red', 'Возвращена': 'orange', 'Заморожена': 'blue', 'В ожидании': 'blue', 'Засчитана': 'green', 'Игнорируется': 'gray', 'Отменена': 'gray'} %}
		{% set invoice_statuses = {'Pending': 'red', 'Paid': 'green', 'Cancelled': 'gray', 'Overdue': 'gray', 'Draft': 'purple'} %}
		{% set ticket_statuses = {'Important!': 'red', 'Open': 'red', 'In progress': 'orange', 'Answered': 'yellow', 'Customer reply': 'yellow', 'Waiting for manager': 'yellow', 'On hold': 'blue', 'Closed': 'green'} %}
		{% set order_statuses = {'Pending': 'red', 'In progress': 'orange', 'Suspended': 'blue', 'Active': 'green', 'Cancelled': 'gray', 'Terminated': 'gray'} %}

		{% block aside %}
			{% include "/parts/aside.html.twig" %}
		{% endblock %}

		<div class="lg:pl-64 md:pl-16">
			{% block main %}{% endblock %}
		</div>

		{% from "./misc/notifications/notifications.stack.html.twig" import stack as notifications %}
		{{ notifications('global', 'toast', 'top right reverse') }}
	</main>

{% endblock %}

{% block footer %}
	{% include "/parts/footer.html.twig" %}
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('dist/js/vendors.js') }}"></script>
	<script src="{{ asset('dist/js/main.js') }}"></script>
{% endblock %}

</body>
</html>
