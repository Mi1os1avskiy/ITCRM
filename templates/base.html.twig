<!DOCTYPE html>
<html class="h-full bg-white" lang="en">
<head>
	<meta charset="UTF-8">
	<title>{% block title %}{% endblock %}</title>
	<link rel="icon" href="{{ asset('src/favicon.ico') }}">
	{% block stylesheets %}
		<link href="{{ asset('dist/styles.css') }}" rel="stylesheet"/>
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
	{% endblock %}
</head>

<body class="h-full">

{% block body %}

	<main id="app">

		{% block wrapper %}

			{% block aside %}
				{% include "/parts/aside.html.twig" %}
			{% endblock %}

			<div :class="!!menuIsOpened ? 'pl-64': 'pl-14'" class="duration-200">
				{% block main %}{% endblock %}
			</div>

			{% from "./misc/notifications/notifications.stack.html.twig" import stack as notifications %}
			{{ notifications('global', 'toast', 'top right reverse') }}

		{% endblock %}

	</main>

{% endblock %}

{% block footer %}
	{% include "/parts/footer.html.twig" %}
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('dist/js/vendors.js') }}"></script>
	<script src="{{ asset('dist/js/main.js') }}"></script>
{% endblock %}

</body>
</html>
