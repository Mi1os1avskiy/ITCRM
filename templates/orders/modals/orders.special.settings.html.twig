{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}orders-special-setting-modal{% endblock %}

{% block modal_content %}

	<div class="relative w-full max-w-lg bg-white transform overflow-hidden rounded-lg shadow-xl transition-all">
		<div class="flex justify-between py-5 px-6 bg-gray-50">
			<h2 class="text-gray-900 text-lg leading-6 font-medium ">Специальные настройки</h2>
			<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
				<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
					<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
				</svg>
			</button>
		</div>
		<div class="p-6 pt-5">
			<div class="flex items-center py-2 space-x-2">
				<input type="checkbox" id="spec_options" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
				<label for="spec_options" class="text-gray-900 text-sm">Отображать email вместо имени клиента</label>
			</div>
		</div>
	</div>

{% endblock %}
