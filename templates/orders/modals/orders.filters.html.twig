{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}orders-filters{% endblock %}

{% block modal_content %}

	<div class="pointer-events-none fixed inset-y-0 right-0 flex max-w-full">
		<div class="pointer-events-auto w-[536px]">
			<div class="flex h-full flex-col mb-48 overflow-y-scroll bg-white shadow-xl">

				<div class="bg-gray-50">
					<div class="p-6">
						<div class="flex justify-between">
							<h2 class="text-lg font-medium text-gray-900">Фильтры</h2>
							<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
								<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
									<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
								</svg>
							</button>
						</div>
					</div>
				</div>

				<div class="mb-24 p-6 space-y-6">
					<div class="space-y-2">
						<p class="text-sm font-medium text-gray-700 text-left">Поиск</p>
						<input type="text" class="block w-full py-2 px-3 rounded-md border-gray-300 text-sm focus:border-indigo-500 focus:ring-indigo-500 placeholder:text-gray-400" placeholder="ID">
						<input type="text" class="block w-full py-2 px-3 rounded-md border-gray-300 text-sm focus:border-indigo-500 focus:ring-indigo-500 placeholder:text-gray-400" placeholder="Email">
					</div>

					<div class="space-y-2">
						<p class="text-sm font-medium text-gray-700 text-left">Локация</p>
						<div class="relative">
							<button type="button" class="relative flex w-full py-2 pl-3 pr-10 rounded-md border border-gray-300 text-left shadow-sm text-sm hover:bg-gray-50" aria-expanded="false" aria-expanded-autohide>
								<span class="pointer-events-none">Не выбрана</span>
								<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
									<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path fill-rule="evenodd" clip-rule="evenodd" d="M5.29289 7.29289C5.68342 6.90237 6.31658 6.90237 6.7071 7.29289L9.99999 10.5858L13.2929 7.29289C13.6834 6.90237 14.3166 6.90237 14.7071 7.29289C15.0976 7.68342 15.0976 8.31658 14.7071 8.70711L10.7071 12.7071C10.3166 13.0976 9.68341 13.0976 9.29289 12.7071L5.29289 8.70711C4.90237 8.31658 4.90237 7.68342 5.29289 7.29289Z" fill="#9CA3AF"/>
									</svg>
								</div>
							</button>

							<ul class="absolute z-10 top-10 py-1 w-full max-h-72 overflow-auto rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none text-sm">
								<li>
									<button type="button" class="w-full py-2 px-4 text-gray-900 font-semibold text-left bg-gray-50 hover:bg-gray-100">Не выбрана</button>
								</li>
								{% for i in countryList() %}
								<li>
									<button type="button" class="w-full py-2 px-4 text-gray-700 text-left hover:bg-gray-100">{{ i }}</button>
								</li>
								{% endfor %}
							</ul>
						</div>
					</div>

					<div class="space-y-2">
						<p class="text-sm font-medium text-gray-700 text-left">Дата</p>
						<div class="relative rounded-md shadow-sm">
							<div class="relative rounded-md shadow-sm">
