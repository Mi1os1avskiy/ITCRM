{% extends 'orders/view.order.base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% set currentTab = 'details' %}

{% macro item(title_rus, title_eng, content_old, content, price_old, price) %}
	<div class="flex items-center">
		{% if title_eng %}
			<div class="w-[228px] py-4 pl-6 pr-3 space-y-1">
				<div class="text-gray-600 text-sm font-medium">{{ title_rus }}</div>
				<div class="text-gray-500 text-xs leading-3">{{ title_eng }}</div>
			</div>
		{% else %}
			<div class="w-[228px] py-4 pl-6 pr-3 text-gray-600 text-sm font-medium">Тариф</div>
		{% endif %}

		{% if content_old %}
			<div class="flex-auto py-4 px-3 space-y-1">
				<div class="text-gray-500 text-xs leading-3 line-through">{{ content_old }}</div>
				<div class="text-yellow-700 text-sm font-medium">{{ content }}</div>
			</div>
		{% else %}
			<div class="flex-auto py-4 px-3 text-sm" :class="!orderEditMode ? 'text-gray-500' : ''">{{ content }}</div>
		{% endif %}

		{% if price_old %}
		<div class="w-[152px] py-4 px-3 space-y-1">
			<div class="text-gray-500 text-xs leading-3 line-through">{{ price_old }}</div>
			<div class="text-yellow-700 text-sm font-medium">{{ price }}</div>
		</div>
		{% else %}
			<div class="w-[152px] py-4 px-3 text-gray-500 text-sm">{{ price }}</div>
		{% endif %}
	</div>
{% endmacro %}

{% import _self as slot %}

