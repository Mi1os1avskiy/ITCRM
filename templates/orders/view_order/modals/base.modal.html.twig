{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_content %}

	<div class="relative w-full max-w-lg bg-white transform overflow-hidden rounded-lg shadow-xl transition-all">
		<div class="flex items-center py-5 px-6 space-x-4 bg-gray-50">
			<div class="w-full space-y-1">
				<h2 class="text-lg leading-6 text-left font-medium">{% block title_rus %}{% endblock %}</h2>
				<p class="text-gray-400 text-xs leading-3 text-left">{% block title_eng %}{% endblock %}</p>
			</div>
			<button :disabled="modalSelectedOption === 'tariff'" class="group flex items-center py-1.5 px-3 space-x-2 ring-1 ring-gray-300 rounded bg-white shadow-sm text-gray-700 hover:bg-gray-50 disabled:text-gray-400">
				<span class="text-xs font-medium">Сбросить</span>
				<span class="text-gray-500 group-disabled:opacity-30">{{ source('assets/images/return.svg') }}</span>
			</button>
			<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
				{{ source('assets/images/close.svg') }}
			</button>
		</div>

		<div class="py-5 px-6 space-y-5">
			<div class="flex">
				<input :checked="modalSelectedOption === 'tariff'" @change="updateSelection('tariff')" name="toggle" id="tariff" class="peer/1 hidden" type="radio">
				<label for="tariff" class="w-full py-2 px-4 bg-white ring-1 ring-gray-300 rounded-l-md text-gray-700 text-sm font-medium cursor-pointer hover:bg-gray-50 peer-checked/1:z-10 peer-checked/1:bg-indigo-50 peer-checked/1:text-indigo-700 peer-checked/1:ring-indigo-500 peer-disabled/1:text-gray-400 peer-disabled/1:pointer-events-none">Согласно тарифу</label>

				<input :checked="modalSelectedOption === 'special'" @change="updateSelection('special')" name="toggle" id="special" class="peer/2 hidden" type="radio">
				<label for="special" class="w-full py-2 px-4 bg-white ring-1 ring-gray-300 rounded-r-md text-gray-700 text-sm font-medium cursor-pointer hover:bg-gray-50 peer-checked/2:z-10 peer-checked/2:bg-indigo-50 peer-checked/2:text-indigo-700 peer-checked/2:ring-indigo-500 peer-disabled/2:text-gray-400 peer-disabled/2:pointer-events-none">Особые настройки</label>
			</div>

			{% block central_part %}{% endblock %}

			<div class="space-y-1">
				<div class="text-gray-700 text-sm text-left font-medium">Переопределить цену</div>

				<div class="relative flex">
					<div class="flex items-center px-3 ring-1 ring-gray-300 rounded-l-md bg-white">
						<input v-model="isModalCheckboxChecked" type="checkbox" class="checkbox w-5 h-5">
					</div>
					<div class="relative flex-1 ml-px">
						<div class="pointer-events-none absolute inset-y-0 left-4 flex items-center text-sm">$</div>
						<input :disabled="!isModalCheckboxChecked" type="text" class="inputs w-full pl-10 rounded-none text-sm" :value="modalSelectedOption === 'tariff' ? '10.00' : '0.00' ">
					</div>
					<div class="py-2 px-3 ring-1 ring-gray-300 rounded-r-md text-sm">1 месяц</div>
				</div>
			</div>
		</div>

		<div class="flex py-5 px-6 space-x-3 bg-gray-50 text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full rounded-md ring-1 ring-gray-300 px-4 py-2 text-gray-700 bg-white hover:bg-gray-50">Отменить</button>
			<button @click="close(true)" type="button" class="w-full rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700">Применить</button>
		</div>
	</div>

{% endblock %}
