{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}prolong-edit-modal{% endblock %}

{% block modal_content %}

	<div class="relative w-[800px] bg-white transform overflow-hidden rounded-lg shadow-xl transition-all">
		<div class="flex items-center justify-between py-5 px-6 space-x-4 bg-gray-50">
			<h2 class="text-lg leading-6 text-left font-medium">Редактирование продления</h2>
			<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
				{{ source('assets/images/close.svg') }}
			</button>
		</div>

		<div class="py-5 px-6 space-y-5">
			<div class="grid grid-cols-2 gap-4">
				<div class="space-y-1">
					<p class="text-gray-700 text-sm text-left font-medium">Start Date</p>
					<div class="relative rounded-md">
						<input class="inputs block w-full pr-10 text-sm" value="03/03/2023" type="text">
						<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
							{{ source('assets/images/calendar.svg') }}
						</div>
					</div>
				</div>

				<div class="space-y-1">
					<p class="text-gray-700 text-sm text-left font-medium">End Date</p>
					<div class="relative rounded-md">
						<input class="inputs block w-full pr-10 text-sm" value="03/12/2023" type="text">
						<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
							{{ source('assets/images/calendar.svg') }}
						</div>
					</div>
				</div>
			</div>

			<div class="grid grid-cols-2 gap-4">
				<div class="space-y-1">
					<p class="text-gray-700 text-sm text-left font-medium">Begin Date</p>
					<div class="relative rounded-md">
						<input class="inputs block w-full pr-10 text-sm" value="03/03/2023" type="text">
						<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
							{{ source('assets/images/calendar.svg') }}
						</div>
					</div>
				</div>

				<div class="space-y-1">
					<p class="text-gray-700 text-sm text-left font-medium">Finish Date</p>
					<div class="relative rounded-md">
						<input class="inputs block w-full pr-10 text-sm" placeholder="Выберите дату" type="text">
						<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
							{{ source('assets/images/calendar.svg') }}
						</div>
					</div>
				</div>
			</div>

			<div class="grid grid-cols-2 gap-4">
				<div class="flex items-center space-x-2">
					<input type="checkbox" checked class="checkbox" id="paid">
					<label for="paid" class="text-sm">Оплачено</label>
				</div>

				<div class="flex items-center space-x-2">
					<input type="checkbox" class="checkbox" id="canceled">
					<label for="canceled" class="text-sm">Отменено</label>
				</div>
			</div>

			<div class="py-5 px-6 bg-gray-50 rounded-md text-sm text-left">
				<p>
					<span class="font-semibold">Действие продления: </span>
					<span>18/04/2023 00:00:00 до 17/05/2023 23:59:59</span>
				</p>
				<p>
					<span class="font-semibold">Сумма продления: </span>
					<span>75$ (из них промокод 0.00$)</span>
				</p>
				<p>
					<span class="font-semibold">Потрачено с начала периода: </span>
					<span>2.5$ (3.33%)</span>
				</p>
				<p>
					<span class="font-semibold">Возвращённая сумма: </span>
					<span>0.00</span>
				</p>
				<p>
					<span class="font-semibold">Список связанных инвойсов: </span>
					<span class="text-indigo-700 font-medium">5354 </span>
					<span class="text-gray-500">Cancelled, </span>
					<span class="text-indigo-500 font-medium">5355 </span>
					<span class="text-green-700">Paid</span>
				</p>
			</div>
		</div>

		<div class="flex py-5 px-6 space-x-3 bg-gray-50 text-sm font-medium">
			<button class="py-2 px-4 rounded-md ring-1 ring-gray-300 text-gray-500 bg-white hover:bg-gray-50" type="button">{{ source('assets/images/bucket-20.svg') }}</button>
			<button @click="close(false)" type="button" class="w-full rounded-md ring-1 ring-gray-300 px-4 py-2 text-gray-700 bg-white hover:bg-gray-50">Отменить</button>
			<button @click="close(true)" type="button" class="w-full rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700">Сохранить</button>
		</div>
	</div>

{% endblock %}
