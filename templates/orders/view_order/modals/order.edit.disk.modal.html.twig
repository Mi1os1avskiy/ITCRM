{% extends'orders/view_order/modals/base.modal.html.twig' %}

{% block modal_name %}order-edit-disk-modal{% endblock %}

{% block title_rus %}Диск{% endblock %}

{% block title_eng %}disk0{% endblock %}

{% block central_part %}

	<div class="relative">
		<button type="button" class="w-full flex bg-white rounded-md ring-1 ring-gray-300 py-2 px-3 space-x-2 text-sm hover:bg-gray-50 disabled:bg-gray-50" aria-expanded="false" aria-expanded-autohide>
			<div v-show="modalSelectedOption === 'tariff'" class="w-full text-sm text-left truncate pointer-events-none">100GB SSD</div>
			<div v-show="modalSelectedOption === 'special'" class="w-full text-sm text-left truncate pointer-events-none">storages/10GB (10/hdd)</div>
			{{ source('assets/images/arrow.svg') }}
		</button>

		<ul class="dropdown max-h-72 w-full overflow-auto">
			<li>
				<button type="button" class="flex items-center w-full py-2 px-4 space-x-3" title="VPS/Xeon 2.90 GHz (1x2900)">
					<span class="text-gray-700 text-sm truncate">Test value 1</span>
				</button>
			</li>
			<li>
				<button type="button" class="flex items-center w-full py-2 px-4 space-x-3" title="VPS/Xeon 2.90 GHz (1x2900)">
					<span class="text-gray-700 text-sm truncate">Test value 2</span>
				</button>
			</li>
		</ul>
	</div>

{% endblock %}
