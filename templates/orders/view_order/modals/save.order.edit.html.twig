{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}save-order-edit{% endblock %}

{% block modal_content %}

	<div class="relative w-96 bg-white transform overflow-hidden rounded-lg shadow-xl transition-all">
		<div class="p-6 space-y-6">
			<h2 class="text-lg leading-6 font-medium text-left">Сохранить изменения</h2>
			<div class="text-gray-700 text-sm text-left">Изменить параметры услуги?</div>
			<div class="flex space-x-3 text-sm font-medium">
				<button @click="close(false)" type="button" class="w-full py-2 px-4 rounded-md ring-1 ring-gray-300 text-gray-700 bg-white hover:bg-gray-50">Назад</button>
				<button @click="close(true)" type="button" class="w-full py-2 px-4 rounded-md bg-indigo-600 text-white hover:bg-indigo-700">Сохранить</button>
			</div>
		</div>
	</div>

{% endblock %}
