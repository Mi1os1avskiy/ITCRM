{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}billing-invoice-cancel{% endblock %}

{% block modal_content %}

	<div class="relative transform overflow-hidden rounded-lg bg-white my-auto p-6 space-y-6 text-left shadow-xl transition-all sm:w-full sm:max-w-lg">
		<h3 class="text-lg font-medium text-gray-900">Отменить инвойс</h3>
		<p class="text-gray-700 text-sm">Вы уверены, что хотите отменить инвойс #{{ data.invoice_id }}?</p>
		<div class="sm:flex sm:space-x-3 text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full rounded-md border border-gray-300 px-4 py-2 text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Закрыть</button>
			<button @click="close(true)" type="button" class="max-sm:mt-3 w-full rounded-md border border-transparent bg-rose-600 px-4 py-2 text-white shadow-sm hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Отменить инвойс</button>
		</div>
	</div>

{% endblock %}