{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}billing-invoice-add-payment{% endblock %}

{% block modal_content %}

	<div class="relative transform overflow-hidden rounded-lg bg-white my-auto py-6 px-6 space-y-6 text-sm text-left shadow-xl transition-all sm:w-full sm:max-w-lg">
		<h3 class="text-lg font-medium text-gray-900">Добавить платёж</h3>
		<div class="w-full py-4 rounded-md bg-purple-50 text-purple-900 text-center">Баланс клиента: ${{ data.user_balance|number_format('2', '.', '') }}</div>
		<div class="flex space-x-4">
			<div class="flex-1 space-y-1">
				<p class="text-gray-700 font-medium">Способ оплаты</p>
				<div class="relative flex w-full py-[9px] px-[13px] space-x-2 rounded-md border border-gray-300 text-sm">
					<span class="flex-1">Custom</span>
					<button type="button" aria-expanded="false" aria-haspopup="true" aria-expanded-autohide>
						<svg class="pointer-events-none" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M5.29289 7.29289C5.68342 6.90237 6.31658 6.90237 6.7071 7.29289L9.99999 10.5858L13.2929 7.29289C13.6834 6.90237 14.3166 6.90237 14.7071 7.29289C15.0976 7.68342 15.0976 8.31658 14.7071 8.70711L10.7071 12.7071C10.3166 13.0976 9.68341 13.0976 9.29289 12.7071L5.29289 8.70711C4.90237 8.31658 4.90237 7.68342 5.29289 7.29289Z" fill="#9CA3AF"/>
						</svg>
					</button>
					<ul class="absolute -left-2 top-10 z-10 mt-2 w-56 origin-top-right rounded-md bg-white  text-gray-700 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
						<li>
							<button type="button" class="w-full px-4 py-3 text-left hover:bg-gray-50">Custom</button>
						</li>
						<li>
							<button type="button" class="w-full px-4 py-3 text-left hover:bg-gray-50">Custom 2</button>
						</li><li>
							<button type="button" class="w-full px-4 py-3 text-left hover:bg-gray-50">Custom 3</button>
						</li>
					</ul>
				</div>
			</div>
			<div class="w-44 space-y-1">
				<p class="text-gray-700 font-medium">Дата и время</p>
				<div class="relative flex py-[9px] px-[13px] space-x-2 rounded-md border border-gray-300">
					<input class="w-32 placeholder-gray-400 focus:outline-none" placeholder="00/00/0000, 00:00">
					<button type="button" aria-expanded="false" aria-haspopup="true" aria-expanded-autohide>
						<svg class="pointer-events-none" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M5.29289 7.29289C5.68342 6.90237 6.31658 6.90237 6.7071 7.29289L9.99999 10.5858L13.2929 7.29289C13.6834 6.90237 14.3166 6.90237 14.7071 7.29289C15.0976 7.68342 15.0976 8.31658 14.7071 8.70711L10.7071 12.7071C10.3166 13.0976 9.68341 13.0976 9.29289 12.7071L5.29289 8.70711C4.90237 8.31658 4.90237 7.68342 5.29289 7.29289Z" fill="#9CA3AF"/>
						</svg>
					</button>
					<ul class="absolute right-0 top-10 z-10 mt-2 w-56 origin-top-right rounded-md bg-white text-gray-700 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
						<li>
							<button type="button" class="w-full px-4 py-3 text-left hover:bg-gray-50">Some data</button>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="space-y-1">
			<p class="text-gray-700 font-medium">Сумма</p>
			<div class="relative rounded-md shadow-sm">
				<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center py-[9px] px-[13px]">
					<span class="text-gray-900 text-sm">$</span>
				</div>
				<input type="text" class="w-full rounded-md border-gray-300 pl-10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-gray-400" placeholder="00.00">
			</div>
		</div>
		<div class="space-y-1">
			<p class="text-gray-700 font-medium">Описание</p>
			<div class="relative rounded-md">
				<textarea class="w-full resize-none py-[9px] px-[13px] rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-gray-400" placeholder="Содержание описания"></textarea>
			</div>
		</div>
		<div class="flex items-center space-x-3">
			<input type="checkbox" id="send_email" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
			<label for="send_email" class="text-gray-500">Отправить email с информацией о платеже</label>
		</div>
		<div class="sm:flex sm:space-x-3 font-medium">
			<button @click="close(false)" type="button" class="w-full rounded-md border border-gray-300 px-4 py-2 text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Отменить</button>
			<button @click="close(true)" type="button" class="max-sm:mt-3 w-full rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Добавить</button>
		</div>
	</div>

{% endblock %}