{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}billing-invoices-filters{% endblock %}

{% block modal_content %}

	<div class="fixed inset-y-0 right-0 flex w-[536px]">
		<div class="flex h-full flex-col overflow-y-scroll bg-white shadow-xl">
			<div class="flex justify-between p-6 bg-gray-50">
				<h2 class="text-lg font-medium">Фильтры</h2>
				<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
					{{ source('misc/svg/close.svg') }}
				</button>
			</div>
			<div class="relative mb-24 p-6 space-y-6">
				<div class="space-y-2">
					<p class="text-sm text-left font-medium text-gray-700">Поиск</p>
					<div class="flex space-x-2">
						<div class="relative rounded-md">
							<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
								{{ source('misc/svg/search.svg') }}
							</div>
							<input type="text" class="inputs block w-full pl-10 text-sm" placeholder="ID инвойса">
						</div>
						<div class="relative rounded-md">
							<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
								{{ source('misc/svg/search.svg') }}
							</div>
							<input type="text" class="inputs block w-full pl-10 text-sm" placeholder="Email или ID клиента">
						</div>
					</div>
					<div class="relative rounded-md">
						<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
							{{ source('misc/svg/search.svg') }}
						</div>
						<input type="text" class="inputs block w-full pl-10 text-sm" placeholder="Описание">
					</div>
				</div>

				<div class="space-y-2">
					<p class="text-sm text-left font-medium text-gray-700">Сумма</p>
					<div class="flex space-x-2">
						<div class="relative rounded-md">
							<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
								<span class="font-extralight">$</span>
							</div>
							<input type="text" class="inputs w-full pl-10 text-sm" placeholder="От">
						</div>
						<div class="relative rounded-md">
							<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
								<span class="font-extralight">$</span>
							</div>
							<input type="text" class="inputs w-full pl-10 text-sm" placeholder="До">
						</div>
					</div>
				</div>

				<div class="space-y-2">
					<p class="text-sm text-left font-medium text-gray-700">Способ оплаты</p>
					<div class="relative">
						<button type="button" class="w-full flex justify-between py-2 px-3 rounded-md ring-1 ring-gray-300 text-left text-sm hover:bg-gray-50" aria-expanded="false" aria-expanded-autohide>
							<p class="pointer-events-none">Не выбран</p>
							{{ source('misc/svg/arrow.svg') }}
						</button>

						<ul class="dropdown w-full max-h-72 overflow-auto text-sm">
							<li>
								<button type="button" class="w-full py-2 px-4 font-semibold text-left bg-gray-50">Не выбран</button>
							</li>
							{% for i in payments() %}
								<li>
									<button type="button" class="w-full py-2 px-4 text-gray-700 text-left">{{ i }}</button>
								</li>
							{% endfor %}
						</ul>
					</div>
				</div>

				<div class="space-y-2">
					<p class="text-sm text-left font-medium text-gray-700">Даты</p>
					<div class="flex space-x-2">
						<div class="relative rounded-md">
							<input type="text" name="dateFrom" id="dateFrom" class="inputs block w-full pr-10 text-sm" placeholder="Даты выписки">
							<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
								{{ source('misc/svg/calendar.svg') }}
							</div>
						</div>
						<div class="relative rounded-md">
							<input type="text" name="dateTo" id="dateTo" class="inputs block w-full pr-10 text-sm" placeholder="Оплатить до">
							<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
								{{ source('misc/svg/calendar.svg') }}
							</div>
						</div>
					</div>
					<div class="relative rounded-md">
						<input type="text" name="datePaid" id="datePaid" class="inputs block w-full pr-10 text-sm" placeholder="Дата платежа">
						<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
							{{ source('misc/svg/calendar.svg') }}
						</div>
					</div>
				</div>

				<div class="space-y-2">
					<p class="text-sm text-left font-medium text-gray-700">Статус</p>
					<div class="checkbox_field">
						{% for val, css in invoice_statuses %}
							<div class="relative flex items-center">
								<input id="invoice_{{ val }}" name="{{ val }}" type="checkbox" class="checkbox absolute top-3.5 left-4">
								<label for="invoice_{{ val }}" class="w-full py-3 pl-11 pr-4 flex items-center">
									<span class="mr-3 h-2.5 w-2.5 bg-{{ css }}-400 rounded-full"></span>
									<span class="text-sm">{{ val }}</span>
								</label>
							</div>
						{% endfor %}
					</div>
				</div>

				{% set invoice_type = ['Custom', 'Initial', 'Prolong'] %}

				<div class="space-y-2">
					<p class="text-sm text-left font-medium text-gray-700">Тип инвойса</p>
					<div class="checkbox_field">
						{% for i in invoice_type %}
							<div class="relative flex items-center">
								<input id="{{ i }}" name="{{ i }}" type="checkbox" class="checkbox absolute top-3.5 left-4">
								<label for="{{ i }}" class="w-full py-3 pl-11 pr-4 text-sm text-left">{{ i }}</label>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>

		<div class="fixed bottom-0 w-[536px] flex justify-between border-t py-5 px-6 bg-white">
			<button type="button" class="inline-flex items-center py-2 pl-3 pr-4 space-x-2 rounded-md ring-1 ring-gray-300 text-sm hover:bg-gray-50">
				{{ source('misc/svg/clear.svg') }}
				<span>Очистить фильтры</span>
			</button>
			<div class="flex space-x-4">
				<button @click="close(false)" type="button" class="py-2 px-4 rounded-md ring-1 ring-gray-300 bg-white text-gray-700 text-sm font-medium hover:bg-gray-50">Отменить</button>
				<button type="submit" class="py-2 px-4 rounded-md bg-indigo-600 text-white text-sm font-medium hover:bg-indigo-700">Показать</button>
			</div>
		</div>
	</div>

{% endblock %}
