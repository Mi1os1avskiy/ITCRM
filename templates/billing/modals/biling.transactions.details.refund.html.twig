{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}billing-transactions-details-refund{% endblock %}

{% block modal_content %}

	<div class="relative transform overflow-hidden rounded-lg bg-white my-auto px-4 py-6 space-y-6 text-left shadow-xl transition-all sm:w-full sm:max-w-lg sm:px-6">
		<h3 class="text-lg font-medium text-gray-900">Изъять кредит</h3>
		<div class="space-y-1">
			<p class="text-gray-700 text-sm font-medium">Сумма</p>
			<div class="relative rounded-md shadow-sm">
				<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center py-[9px] px-[13px]">
					<span class="text-gray-900 text-sm">$</span>
				</div>
				<input type="text" class="w-full rounded-md border-gray-300 pl-10 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-gray-400" placeholder="00.00">
			</div>
		</div>
		<div class="space-y-1">
			<p class="text-gray-700 text-sm font-medium">Описание</p>
			<div class="relative rounded-md">
				<textarea class="w-full resize-none py-[9px] px-[13px] rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder:text-gray-400" placeholder="Комментарий"></textarea>
			</div>
		</div>
		<div class="sm:flex sm:space-x-3 sm:text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full rounded-md border border-gray-300 px-4 py-2 text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Отменить</button>
			<button @click="close(true)" type="button" class="max-sm:mt-3 w-full rounded-md border border-transparent bg-red-600 px-4 py-2 text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Изъять</button>
		</div>
	</div>

{% endblock %}