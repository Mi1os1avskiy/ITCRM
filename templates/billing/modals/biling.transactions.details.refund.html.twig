{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}billing-transactions-details-refund{% endblock %}

{% block modal_content %}

	<div class="relative transform overflow-hidden rounded-lg bg-white my-auto text-left shadow-xl transition-all w-full max-w-lg">
		<div class="flex items-center justify-between py-5 px-6 bg-gray-50">
			<h2 class="text-lg font-medium leading-6">Возврат средств</h2>
			<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
				{{ source('misc/svg/close.svg') }}
			</button>
		</div>
		<div class="py-5 px-6 space-y-5">
			<div class="p-4 rounded-md bg-purple-50 text-sm text-purple-900 text-center">Входящая транзакция: $34.00</div>
			<div>
				<p class="text-gray-700 text-sm font-medium">Сумма</p>
				<div class="relative mt-1 rounded-md">
					<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center py-2 px-3 text-sm">$</div>
					<input type="text" class="inputs w-full pl-10 text-sm" placeholder="00.00">
				</div>
				<div class="mt-2 text-gray-500 text-sm">Вычитается из баланса клиента</div>
			</div>
			<div class="h-20 space-y-1">
				<p class="text-gray-700 text-sm font-medium">Описание</p>
				<textarea class="inputs w-full resize-none py-2 px-3 text-sm" placeholder="Содержание описания"></textarea>
			</div>
		</div>
		<div class="flex py-5 px-6 space-x-3 bg-gray-50 text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full py-2 px-4 rounded-md ring-1 ring-gray-300 bg-white text-gray-700 hover:bg-gray-50">Отменить</button>
			<button @click="close(true)" type="button" class="w-full py-2 px-4 rounded-md bg-red-500 text-white hover:bg-red-600">Вернуть платёж</button>
		</div>
	</div>

{% endblock %}
