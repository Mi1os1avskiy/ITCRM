{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}autosetup-tokens-modal{% endblock %}

{% block modal_content %}

	<div class="relative w-[800px] transform overflow-hidden rounded-lg bg-white my-auto text-left shadow-xl transition-all">
		<div class="py-5 px-6 bg-gray-50">
			<div class="h-9 flex items-center justify-between space-x-4">
				<h2 class="text-lg leading-6 font-medium">Токены</h2>
				<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
					{{ source('assets/images/close.svg') }}
				</button>
			</div>
		</div>
		<div class="py-5 px-6 text-sm">
			{% for i in tokens %}
			<p>{{ i }}</p>
			{% endfor %}
		</div>
		<div class="flex justify-end py-5 px-6 bg-gray-50">
			<button @click="close(false)" type="button" class="py-2 px-4 rounded-md ring-1 ring-gray-300 bg-white text-gray-700 text-sm font-medium hover:bg-gray-50">Закрыть</button>
		</div>
	</div>

{% endblock %}
