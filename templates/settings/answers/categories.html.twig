{% extends 'settings/answers/base.answers.html.twig' %}

{% set currentTab = 'settings_categories' %}

{% block categories %}

	<div class="flex space-x-6">
		<div class="w-[656px] space-y-1">
			{% for i in categories %}
				<div class="flex items-center justify-between py-2 px-4 space-x-4 ring-1 ring-gray-200 rounded-lg">
					<p class="text-gray-700 text-sm font-medium">{{ i }}</p>
					<div class="flex space-x-2">
						<button @click="editingCategory({{ loop.index }})" class="popover__wrapper relative p-2" type="button">
							<svg class="text-gray-500 hover:text-indigo-700" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
								<path d="M5.29885 12.8829L4.03706 16.0374C3.8738 16.4455 4.27884 16.8506 4.68699 16.6873L7.84146 15.4255C8.34443 15.2243 8.80128 14.9231 9.18433 14.5401L14.0088 9.71589L11.0088 6.7159L6.18433 11.5401C5.80128 11.9231 5.50003 12.38 5.29885 12.8829Z" fill="currentColor"/>
								<path d="M11.7159 6.00881L14.7159 9.00881L16.1035 7.62132C16.9319 6.79289 16.9319 5.44975 16.1035 4.62132C15.2751 3.79289 13.9319 3.79289 13.1035 4.62132L11.7159 6.00881Z" fill="currentColor"/>
							</svg>
							<div class="popover__content w-fit bottom-11 -left-[70px] py-2 px-3 bg-gray-800 text-gray-100 text-xs font-medium rounded-lg whitespace-nowrap">Редактировать категорию</div>
						</button>
						<button @click="deleteCategory()" class="popover__wrapper relative p-2" type="button">
							<svg class="text-gray-500 hover:text-red-500" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
								<path d="M12.2837 7.5L11.9952 15M8.00481 15L7.71635 7.5M16.023 4.82547C16.308 4.86851 16.592 4.91456 16.875 4.96358M16.023 4.82547L15.1332 16.3938C15.058 17.3707 14.2434 18.125 13.2637 18.125H6.73631C5.75655 18.125 4.94198 17.3707 4.86683 16.3938L3.97696 4.82547M16.023 4.82547C15.0677 4.6812 14.1013 4.57071 13.125 4.49527M3.125 4.96358C3.40798 4.91456 3.69198 4.86851 3.97696 4.82547M3.97696 4.82547C4.93231 4.6812 5.89874 4.57071 6.875 4.49527M13.125 4.49527V3.73182C13.125 2.74902 12.3661 1.92853 11.3838 1.8971C10.9244 1.8824 10.463 1.875 10 1.875C9.53696 1.875 9.07565 1.8824 8.61618 1.8971C7.63388 1.92853 6.875 2.74902 6.875 3.73182V4.49527M13.125 4.49527C12.0938 4.41558 11.0516 4.375 10 4.375C8.94836 4.375 7.9062 4.41558 6.875 4.49527" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							<div class="popover__content w-fit bottom-11 -left-[52px] py-2 px-3 bg-gray-800 text-gray-100 text-xs font-medium rounded-lg whitespace-nowrap">Удалить категорию</div>
						</button>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="w-[400px] h-fit ring-1 ring-gray-200 rounded-lg overflow-hidden">
			<div class="py-5 px-6 bg-gray-50">
				<p id="header_edit" class="hidden text-gray-900 text-lg font-medium leading-6">Редактирование категории</p>
				<p id="header_create" class="header_create text-gray-900 text-lg font-medium leading-6">Создание новой категории</p>
			</div>
			<div class="py-5 px-6 space-y-1">
				<p class="text-gray-700 text-sm font-medium">Заголовок <span class="text-red-500 text-sm font-medium">*</span></p>
				<input id="header_input" class="w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm text-gray-700 text-sm placeholder-gray-400" placeholder="Введите заголовок" type="text">
			</div>
			<div class="flex py-5 px-6 space-x-3 bg-gray-50">
				<button id="del_btn" @click="deleteCategory()" class="hidden p-2 ring-1 ring-gray-300 rounded-md bg-white hover:bg-gray-50" type="button">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
						<path d="M12.2837 7.5L11.9952 15M8.00481 15L7.71635 7.5M16.023 4.82547C16.308 4.86851 16.592 4.91456 16.875 4.96358M16.023 4.82547L15.1332 16.3938C15.058 17.3707 14.2434 18.125 13.2637 18.125H6.73631C5.75655 18.125 4.94198 17.3707 4.86683 16.3938L3.97696 4.82547M16.023 4.82547C15.0677 4.6812 14.1013 4.57071 13.125 4.49527M3.125 4.96358C3.40798 4.91456 3.69198 4.86851 3.97696 4.82547M3.97696 4.82547C4.93231 4.6812 5.89874 4.57071 6.875 4.49527M13.125 4.49527V3.73182C13.125 2.74902 12.3661 1.92853 11.3838 1.8971C10.9244 1.8824 10.463 1.875 10 1.875C9.53696 1.875 9.07565 1.8824 8.61618 1.8971C7.63388 1.92853 6.875 2.74902 6.875 3.73182V4.49527M13.125 4.49527C12.0938 4.41558 11.0516 4.375 10 4.375C8.94836 4.375 7.9062 4.41558 6.875 4.49527" stroke="#6B7280" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
				</button>
				<button @click="editingCategory()" class="w-full py-2 px-4 bg-white ring-1 ring-gray-300 rounded-md text-gray-700 text-sm font-medium hover:bg-gray-50" type="button">Отменить</button>
				<button id="create_btn" @click="createCategory()" class="w-full py-2 px-4 bg-indigo-600 rounded-md text-white text-sm font-medium hover:bg-indigo-700" type="button">Создать</button>
				<button id="edit_btn" @click="editCategory()" class="hidden w-full py-2 px-4 bg-indigo-600 rounded-md text-white text-sm font-medium hover:bg-indigo-700" type="button">Сохранить</button>
			</div>
		</div>
	</div>

{% endblock %}
