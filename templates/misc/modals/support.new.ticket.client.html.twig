{% extends'misc/modals/base.modal.html.twig' %}

{% block modal_name %}support-new-ticket-client{% endblock %}

{% block modal_content %}

	{% set users = [
		{'email': 'auisque@mail.com', 'name': 'Dianne Russell'},
		{'email': 'maurisnulla@mail.com', 'name': 'Jacob Jones'},
		{'email': 'proin_aliquet@mail.com', 'name': 'Floyd Miles'},
		{'email': 'nibh_consequat@mail.com', 'name': ''},
		{'email': 'vulputate@mail.com', 'name': 'Ronald Richards'},
		{'email': 'mail@mail.com', 'name': 'Richard Dawkins'},
		{'email': 'miloslavskiy@tut.by', 'name': 'Lex Stark'},
	] %}

	<div class="relative w-[800px] transform overflow-hidden rounded-lg bg-white my-auto shadow-xl transition-all">

		<p class="px-6 py-5 bg-gray-50 text-lg font-medium text-left">Выбрать клиента</p>

		<div class="px-6 py-5">
			<div class="relative mb-4 rounded-md shadow-sm">
				<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
					<svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
						<path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
					</svg>
				</div>
				<input type="text" class="block w-full rounded-md border-gray-300 pl-10 focus:border-indigo-500 focus:ring-indigo-500 text-sm placeholder:text-gray-400" placeholder="Поиск по Email или ID">
			</div>

			<ul class="h-64 overflow-y-scroll text-sm">
				{% for user in users %}
					<li class="flex items-center p-4 space-x-4 border-y border-b-gray-200 border-t-transparent hover:bg-indigo-50 hover:border-indigo-200">
						<input type="radio" name="user" id="{{ user.email }}" class="border-gray-300">
						<label for="{{ user.email }}" class="flex w-full space-x-4">
							<p class="font-medium">{{ user.email }}</p>
							<p class="text-gray-500">{{ user.name }}</p>
						</label>
					</li>
				{% endfor %}
			</ul>
		</div>

		<div class="sm:flex px-6 py-5 bg-gray-50 sm:space-x-3 sm:text-sm font-medium">
			<button @click="close(false)" type="button" class="w-full rounded-md border border-gray-300 px-4 py-[9px] text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Отменить</button>
			<button @click="close(true)" type="button" class="max-sm:mt-3 w-full rounded-md border border-transparent bg-indigo-600 px-4 py-[9px] text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Выбрать</button>
		</div>

	</div>

{% endblock %}