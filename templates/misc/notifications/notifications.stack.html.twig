{% macro stack(channel, style, position) %}
	<notifications-stack inline-template channel="{{ channel }}">
		<transition-group
				class="top-5 right-5 fixed flex flex-col-reverse w-[340px]"
				name="notifications-stack"
				tag="ul"
				enter-class="h-0 -translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
				enter-to-class="h-full translate-y-0 opacity-100 sm:translate-x-0"
				enter-active-class="transform ease-out duration-300 transition"
				leave-class="opacity-100"
				leave-to-class="opacity-0"
				leave-active-class="transition ease-in duration-200"
		>
			<li v-bind:id="notification.uuid" v-cloak v-for="notification in $stack" v-bind:key="notification" class="notification overflow-hidden mb-3">
				<notification-item inline-template v-bind:item="notification" v-on:notification-closed="removeItem">
					<div class="notification-wrapper pointer-events-auto w-full max-w-sm overflow-hidden bg-green-50 rounded-md" v-bind:style="{height: (!!isAnimated ? contentHeight + 'px' : 'auto')}">
						<div ref="content" class="flex items-start p-4 space-x-4 notification-content">
							<svg v-if="item.level === NotificationLevels.SUCCESS" class="mt-0.5" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18ZM13.8566 8.19113C14.1002 7.85614 14.0261 7.38708 13.6911 7.14345C13.3561 6.89982 12.8871 6.97388 12.6434 7.30887L9.15969 12.099L7.28033 10.2197C6.98744 9.92678 6.51256 9.92678 6.21967 10.2197C5.92678 10.5126 5.92678 10.9874 6.21967 11.2803L8.71967 13.7803C8.87477 13.9354 9.08999 14.0149 9.30867 13.9977C9.52734 13.9805 9.72754 13.8685 9.85655 13.6911L13.8566 8.19113Z" fill="#34D399"/>
							</svg>
							<svg v-if="item.level === NotificationLevels.ERROR" class="mt-0.5 text-red-400" width="20" height="20" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
							</svg>
							<div class="flex-1 text-sm cursor-default">
								<p class="font-medium" :class="{'text-red-800' : (item.level === NotificationLevels.ERROR), 'text-green-800' :(item.level === NotificationLevels.SUCCESS)}">${item.title}</p>
								<p v-if="item.text" class="mt-2 text-green-700">${item.text}</p>
							</div>
							<button @click="close()" :disabled="!!isAnimated" type="button" class="rounded-md p-0.5 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-700">
								<svg width="22" height="22" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path fill-rule="evenodd" clip-rule="evenodd" d="M4.55806 4.55806C4.80214 4.31398 5.19786 4.31398 5.44194 4.55806L10 9.11612L14.5581 4.55806C14.8021 4.31398 15.1979 4.31398 15.4419 4.55806C15.686 4.80214 15.686 5.19786 15.4419 5.44194L10.8839 10L15.4419 14.5581C15.686 14.8021 15.686 15.1979 15.4419 15.4419C15.1979 15.686 14.8021 15.686 14.5581 15.4419L10 10.8839L5.44194 15.4419C5.19786 15.686 4.80214 15.686 4.55806 15.4419C4.31398 15.1979 4.31398 14.8021 4.55806 14.5581L9.11612 10L4.55806 5.44194C4.31398 5.19786 4.31398 4.80214 4.55806 4.55806Z" fill="#10B981"/>
								</svg>
							</button>
						</div>
					</div>
				</notification-item>
			</li>
		</transition-group>
	</notifications-stack>
{% endmacro %}