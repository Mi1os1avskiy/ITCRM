{% set nav = {'overview': 0, 'profile': 0, 'services': 0, 'invoices': 0, 'tickets': 1, 'credits': 99.5, 'emails': 0, 'notes': 3, 'log': 0} %}

<nav class="bg-gray-50 border-b-2 mx-auto pb-1 px-4 sm:px-6 lg:px-8">
	<div class="inline-block sm:flex sm:h-12 sm:space-x-8">

		{% for tab, val in nav %}

			<a href="/clients/{{ tab }}" class="block sm:inline-flex max-sm:mb-3 items-center border-b-2 border-transparent text-sm text-gray-500 hover:border-gray-300 hover:text-gray-700 {% if currentTab == tab %} border-indigo-600 text-indigo-600 pointer-events-none {% endif %}">
				<span>{{ tab|capitalize }}</span>
				{% if val %}
					<span class="inline-flex items-center ml-2 px-2.5 py-0.5 rounded-md text-xs font-medium {% if currentTab == tab %} bg-indigo-100 text-indigo-600 {% else %} bg-gray-100 text-gray-800 {% endif %}">{% if tab == 'credits' %}${% endif %}{{ val }}</span>
				{% endif %}
			</a>

		{% endfor %}

	</div>
</nav>