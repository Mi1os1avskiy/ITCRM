{% set tabs = [
	{'eng': 'overview', 'rus': 'Обзор'},
	{'eng': 'profile', 'rus': 'Профиль'},
	{'eng': 'services', 'rus': 'Услуги'},
	{'eng': 'invoices', 'rus': 'Инвойсы'},
	{'eng': 'tickets', 'rus': 'Тикеты'},
	{'eng': 'credits', 'rus': 'Кредиты'},
	{'eng': 'transactions', 'rus': 'Транзакции'},
	{'eng': 'emails', 'rus': 'Письма'},
	{'eng': 'notes', 'rus': 'Заметки'},
	{'eng': 'duplicates', 'rus': 'Дубликаты аккаунтов'},
	] %}

<div class="bg-gray-50 mx-auto px-8">
	<nav class="pt-4 flex items-center space-x-4 text-sm text-gray-500 font-medium">
		<a href="{{ path('clients') }}">Клиенты</a>
        <svg width="20" height="20" viewBox="0 -1 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M7.29289 14.7071C6.90237 14.3166 6.90237 13.6834 7.29289 13.2929L10.5858 10L7.29289 6.70711C6.90237 6.31658 6.90237 5.68342 7.29289 5.29289C7.68342 4.90237 8.31658 4.90237 8.70711 5.29289L12.7071 9.29289C13.0976 9.68342 13.0976 10.3166 12.7071 10.7071L8.70711 14.7071C8.31658 15.0976 7.68342 15.0976 7.29289 14.7071Z" fill="#9CA3AF"/>
        </svg>
		<span>Клиент {{ userID() }}</span>
	</nav>
	<div class="flex items-center h-[38px] mt-2 space-x-4">
		<span class="font-semibold leading-6 text-lg">Клиент {% if user.name %}{{ user.name }}{% else %}{{ user.email }}{% endif %}</span>
		<span class="px-3 pt-0.5 pb-1 rounded-full text-xs font-medium
		{% for val, css in user_statuses %}
			{% if user.status == val %}bg-{{ css }}-100 text-{{ css }}-800 {% endif %}
		{% endfor %}
		">{{ user.status }}</span>
	</div>
</div>

<nav class="bg-gray-50 border-b px-8">
	<div class="-mb-px flex pt-4 space-x-8">
		{% for tab in tabs %}
			<a href="/clients/{{ tab.eng }}" class="pb-[14px] border-b-2 border-transparent text-sm font-medium leading-5 hover:border-gray-300 hover:text-gray-700 {% if currentTab == tab.eng %} border-indigo-500 text-indigo-600 pointer-events-none{% else %} text-gray-500 {% endif %}">{{ tab.rus|capitalize }}</a>
		{% endfor %}
	</div>
</nav>

