{% extends 'clients/clients.base.html.twig' %}

{% set currentTab = 'profile' %}

{% block content %}

	<profile-settings inline-template>
		<form class="py-6 px-8 space-y-5 divide-y divide-gray-200 text-gray-900 text-sm">
			<h3 class="text-lg font-medium leading-6">Персональные данные</h3>

			<div class="flex pt-5 space-x-6">
				<p class="w-[344px] font-medium text-gray-700 self-center">Имя</p>
				<input type="text" autocomplete="given-name" class="w-[345px] py-[9px] px-[13px] rounded-md border-gray-300 text-sm focus:border-indigo-500 focus:ring-indigo-500" value="Lex">
			</div>

			<div class="flex pt-5 space-x-6">
				<p class="w-[344px] font-medium text-gray-700 self-center">Фамилия</p>
				<input type="text" autocomplete="family-name" class="w-[345px] py-[9px] px-[13px] rounded-md border-gray-300 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500" value="Stark">
			</div>

			<div class="flex pt-5 space-x-6">
				<p class="w-[344px] font-medium text-gray-700 self-center">Название компании</p>
				<input type="text" class="w-[345px] py-[9px] px-[13px] rounded-md border-gray-300 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Microsoft">
			</div>

			<div class="flex pt-5 space-x-6">
				<p class="w-[344px] font-medium text-gray-700 self-center">Email</p>
				<div class="flex w-[345px]">
					<div class="flex-grow focus-within:z-10">
						<input type="email" class="w-full py-[9px] px-[13px] rounded-l-md text-sm border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" value="valeron@mail.com">
					</div>

					<div class="relative">
						<button type="button" class="relative flex items-center w-full -ml-px cursor-default space-x-2 rounded-r-md border border-gray-300 bg-gray-50 py-[9px] px-[13px] shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" aria-expanded="false" aria-expanded-autohide>
                            <span class="pointer-events-none h-2.5 w-2.5 flex-shrink-0 rounded-full bg-green-400"></span>
                            <span class="pointer-events-none">Верифицирован</span>
                            <svg class="pointer-events-none" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M5.29289 7.29289C5.68342 6.90237 6.31658 6.90237 6.7071 7.29289L9.99999 10.5858L13.2929 7.29289C13.6834 6.90237 14.3166 6.90237 14.7071 7.29289C15.0976 7.68342 15.0976 8.31658 14.7071 8.70711L10.7071 12.7071C10.3166 13.0976 9.68341 13.0976 9.29289 12.7071L5.29289 8.70711C4.90237 8.31658 4.90237 7.68342 5.29289 7.29289Z" fill="#9CA3AF"/>
                            </svg>
						</button>

						<ul class="absolute z-10 mt-1 max-h-60 overflow-auto rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none text-sm">
							<li class="relative cursor-pointer select-none py-2 px-4 hover:bg-gray-100">
								<div class="flex items-center space-x-3">
									<span class="inline-block h-2.5 w-2.5 flex-shrink-0 rounded-full bg-red-400"></span>
									<span class="text-gray-700 truncate">Не верифицирован</span>
								</div>
							</li>
							<li class="relative cursor-pointer select-none py-2 px-4 hover:bg-gray-100">
								<div class="flex items-center space-x-3">
									<span class="inline-block h-2.5 w-2.5 flex-shrink-0 rounded-full bg-green-400"></span>
									<span class="text-gray-700 truncate">Верифицирован</span>
								</div>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="flex pt-5 space-x-6">
				<p class="w-[344px] font-medium text-gray-700 self-center">Номер телефона</p>
				<input type="tel" class="w-[345px] py-[9px] px-[13px] text-sm rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="+1">
			</div>

			<div class="flex pt-5 space-x-6">
				<p class="w-[344px] font-medium text-gray-700 self-center">Статус аккаунта</p>
				<div class="relative w-[345px]">
					<button type="button" class="relative w-full py-[9px] px-[13px] cursor-default rounded-md border border-gray-300 bg-white py-2 pl-3 pr-10 text-left shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" aria-expanded="false" aria-expanded-autohide>
	                    <span class="pointer-events-none flex items-center">
	                        <span aria-label="Online" class="inline-block h-2.5 w-2.5 flex-shrink-0 rounded-full bg-green-400"></span>
	                        <span class="ml-3 block truncate">Active</span>
	                    </span>
						<span class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
	                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
	                            <path fill-rule="evenodd" clip-rule="evenodd" d="M5.29289 7.29289C5.68342 6.90237 6.31658 6.90237 6.7071 7.29289L9.99999 10.5858L13.2929 7.29289C13.6834 6.90237 14.3166 6.90237 14.7071 7.29289C15.0976 7.68342 15.0976 8.31658 14.7071 8.70711L10.7071 12.7071C10.3166 13.0976 9.68341 13.0976 9.29289 12.7071L5.29289 8.70711C4.90237 8.31658 4.90237 7.68342 5.29289 7.29289Z" fill="#9CA3AF"/>
	                        </svg>
	                    </span>
					</button>

					{% set statuses = {'Active': 'green', 'Inactive': 'gray', 'Closed': 'gray'} %}
					<ul class="absolute z-10 mt-1 max-h-60 w-64 max-w-lg overflow-auto rounded-md bg-white py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm">
						{% for val, css in statuses %}
							<li>
								<button type="button" class="w-full flex items-center py-2 px-4 space-x-3 hover:bg-indigo-600 hover:text-white">
									<span class="h-2.5 w-2.5 flex-shrink-0 rounded-full bg-{{ css }}-400"></span>
									<span>{{ val }}</span>
								</button>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>

			<div class="flex pt-5 space-x-6">
				<div class="w-[344px]"></div>
				<button type="button" class="rounded-md border border-transparent bg-indigo-600 py-[9px] px-[17px] text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Сохранить изменения</button>
			</div>

			<h3 class="pt-10 text-lg font-medium leading-6">Безопасность</h3>

			<div class="flex pt-5 space-x-6">
				<div class="w-[344px] font-medium text-gray-700 self-center">Пароль</div>
				<button @click="changePassword()" type="button" class="rounded-md border border-gray-300 bg-white py-[9px] px-[13px] font-medium leading-4 text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Изменить</button>
			</div>

			<div class="flex items-center pt-5 space-x-6">
				<div class="w-[344px] font-medium text-gray-700">2FA</div>
				<button @click="disable2fa()" type="button" class="rounded-md border border-gray-300 bg-white py-[9px] px-[13px] font-medium leading-4 text-gray-700 whitespace-nowrap shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Отключить 2FA</button>
				<p class="font-medium text-gray-700">Код восстановления: HsxS-BCve-hoYo-PfWn-Wqvk</p>
			</div>
		</form>
	</profile-settings>

	{% block modals %}
		{% include 'clients/profile/modals/clients.profile.password.html.twig' %}
		{% include 'clients/profile/modals/clients.profile.2fa.html.twig' %}
	{% endblock %}

{% endblock %}
