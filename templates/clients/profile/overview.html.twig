{% extends 'clients/clients.base.html.twig' %}

{% set currentTab = 'overview' %}

{% block content %}

    <profile-settings inline-template>
        <div class="px-8 py-6 divide-y divide-gray-200 text-gray-900 text-sm">
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">ID</div>
                <div>#{{ user.id }}</div>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">Имя</div>
                <div>{{ user.name }}</div>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">Email</div>
                <div>{{ user.email }}</div>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">Язык использования</div>
                <div>{{ user.lang }}</div>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">Номер телефона</div>
                <div>{% if user.phone %}{{ user.phone }}{% else %}-{% endif %}</div>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">Адрес</div>
                <div>
                    {% for i in user.address %}
                        <p>{{ i }}</p>
                    {% endfor %}
                </div>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">Название компании</div>
                <div>{{ user.company }}</div>
            </div>
            <div class="flex items-center py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">Последний логин</div>
                <div>{{ user.last_log.date }} {{ user.last_log.time }} • <a target="_blank" href="https://www.geodatatool.com/en/?ip={{ user.last_log.ip }}" class="text-indigo-700">{{ user.last_log.ip }}</a> ({{ user.last_log.geo }})</div>
                <button @click="overviewLogs()" type="button" class="rounded-md border border-gray-300 px-[11px] py-[7px] text-xs font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">История</button>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">IP регистрации</div>
                <div><a target="_blank" href="https://www.geodatatool.com/en/?ip={{ user.ip }}" class="text-indigo-700">{{ user.ip }}</a> ({{ user.ccode }})</div>
            </div>
            <div class="flex py-5 space-x-6">
                <div class="w-[344px] font-medium text-gray-500">2FA</div>
                <div>
                    {% if user.twofa %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Включена</span>
                        {% else %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Выключена</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </profile-settings>

    {% include 'clients/profile/modals/clients.overview.iplogs.html.twig' %}

{% endblock %}

