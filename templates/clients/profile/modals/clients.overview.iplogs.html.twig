{% extends'/misc/modals/base.modal.html.twig' %}

{% block modal_name %}overview-logs-modal{% endblock %}

{% block modal_content %}

	<div class="relative w-[800px] h-[604px] transform overflow-hidden rounded-lg bg-white shadow-xl transition-all">

		<div class="flex py-5 px-6 space-x-6 bg-gray-50">
			<div class="grow text-lg text-left font-medium">IP логи</div>
			<div class="w-[220px] relative">
				<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
					{{ source('assets/images/search.svg') }}
				</div>
				<input class="inputs block w-full py-2 pl-10 pr-3 text-sm" placeholder="Поиск по IP" type="text">
			</div>
			<button @click="close(false)" type="button" class="rounded-md text-gray-400 hover:text-gray-500">
				{{ source('assets/images/close.svg') }}
			</button>
		</div>

		<table class="min-w-full rounded-lg">
			<thead>
			<tr class="bg-gray-50 border-b text-sm">
				<th class="w-[130px] py-3 pl-6 pr-3 text-left font-medium">Дата</th>
				<th class="w-[120px] p-3 text-left font-medium">Время</th>
				<th class="p-3 text-left font-medium">IP</th>
				<th class="w-[120px] py-3 pl-3 pr-6 text-left font-medium">Локация</th>
			</tr>
			</thead>
			<tbody class="divide-y bg-white">

			{% for item in clients_data %}
				{% if item.id == userID %}
					{% for i in item.logs %}

						<tr class="text-left text-gray-500 text-sm">
							<td class="py-4 pl-6 pr-3">{{ i.date }}</td>
							<td class="py-4 px-3">{{ i.time }}</td>
							<td class="py-4 px-3">
								<a target="_blank" href="https://www.geodatatool.com/en/?ip={{ i.ip }}" class="block w-full hover:text-indigo-700">{{ i.ip }}</a>
							</td>
							<td class="py-4 pl-3 pr-6">{{ i.loc }}</td>
						</tr>

					{% endfor %}
				{% endif %}
			{% endfor %}

			</tbody>
		</table>

		<div class="fixed bottom-0 w-full">
			<div class="flex flex-1 items-center justify-between ring-1 ring-gray-200 rounded-b-lg py-4 px-6 bg-gray-50">
				<div>
					<nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
						<a href="#" class="relative inline-flex items-center rounded-l-md border border-gray-300 bg-white p-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-20">
							<span class="sr-only">Previous</span>
							{{ source('assets/images/pagination/arrow.svg') }}
						</a>
						<a href="#" aria-current="page" class="relative z-10 inline-flex items-center border border-indigo-500 bg-indigo-50 px-4 py-2 text-sm font-medium text-indigo-700 focus:z-20">1</a>
						<a href="#" class="relative inline-flex items-center rounded-r-md border border-gray-300 bg-white p-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-20">
							<span class="sr-only">Next</span>
							<div class="rotate-180">
								{{ source('assets/images/pagination/arrow.svg') }}
							</div>
						</a>
					</nav>
				</div>
				<div class="flex items-center space-x-4">
					<p class="text-sm text-gray-500 truncate">1 - 5 из 5</p>
					<div class="relative">
						<button type="button" class="w-20 flex justify-between py-2 px-3 space-x-2 rounded-md border border-gray-300 bg-white text-left shadow-sm hover:bg-gray-50" aria-expanded="false" aria-expanded-autohide>
							<p class="text-sm pointer-events-none">${btnIpLogsPagination}</p>
							{{ source('assets/images/arrow.svg') }}
						</button>
						<ul class="absolute z-10 bottom-10 w-full overflow-auto rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
							{% for i in range(10, 20, 5) %}
								<li class="hover:bg-gray-50">
									<button @click="btnIpLogsPagination = '{{ i }}'"
											:class="{'text-gray-50 font-medium bg-indigo-600': btnIpLogsPagination === '{{ i }}'}"
											class="flex items-center w-full py-2 px-4 space-x-3 text-gray-700 text-sm truncate">{{ i }}</button>
								</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>

	</div>

{% endblock %}
