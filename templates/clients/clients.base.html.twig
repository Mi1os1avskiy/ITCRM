{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block main %}

	<clients-module inline-template>
		<div class="flex flex-1 flex-col">
			<main class="flex-1 mb-24">

				{% set userID = userID() %}
				{% set userData = allClients() %}

				{% for user in userData %}
					{% if userID == user.id %}


						{% block header %}
							{% include 'clients/header.profile.html.twig' %}
						{% endblock %}

						{% block content %}{% endblock %}

					{% endif %}
				{% endfor %}

			</main>
		</div>
	</clients-module>

{% endblock %}